  "publishConfig": {
    "directory": "dist",
    "linkDirectory": true
  },
  "license": "MIT",
  "dependencies": {
    "@reagentai/reagent": "workspace:^",
    "redux-saga": "^1.3.0"
  },
  "devDependencies": {
    "typescript": "5.4.5"
  }
}
